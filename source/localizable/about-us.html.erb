---
title: About Guava
---

<% content_for :additional_js do %>
  <%= javascript_include_tag :'section-highlight' %>
  <%= javascript_include_tag :'dynamic-menu' %>
  <%= javascript_include_tag :'logo-transition' %>
<% end %>

<% content_for :language_link do %>
  <%= partial 'language-link', locals: { type: 'short', color: 'white' }%>
<% end %>

<article>
  <header id="cover">
    <div class="cover of-about-us">
      <span class="logo of-guava at-cover">
        <%= inline_svg 'guava' %>
      </span>
      <div class="grid is-container of-hero">
        <div class="grid is-row">
          <div class="grid is-content">
            <h1><%= t(:'about-us.title') %></h1>
            <p class="is-lead also-serif hasnt-widow"><%= t(:'about-us.subtitle') %></p>
            <p><%= t(:'about-us.intro') %></p>
          </div>
        </div>
      </div>
    </div>
    <span class="icon of-arrow-down at-about-us / js-scroll-indicator"
      data-scroll-indicator-target="#team .grid.is-container" data-scroll-indicator-offset="100">
      <%= inline_svg 'icon-arrow-big', class: 'icon of-big-arrow' %>
    </span>
  </header>

  <hr>

  <main role="main">
    <section id="team" class="page-about is-team">
      <div class="grid is-container">
        <div class="grid are-columns of-wide-content">
          <h2><span><%= t(:'about-us.team.title') %></span></h2>
          <ul>
            <li class="is-guilherme">
              <figure>
                <%= image_tag 'illustration-team-guilherme-small@2x.png', class: 'picture of-team also-small', alt: t(:'illustrations.team.guilherme') %>
              </figure>
              <h4><%= t(:'about-us.team.guilherme.title') %></h4>
              <em class="is-small"><%= t(:'about-us.team.guilherme.role') %></em>
            </li>
            <li class="is-lailson">
