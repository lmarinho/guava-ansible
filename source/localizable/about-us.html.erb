            </li>
            <li class="is-new-position" title="<%= t(:'about-us.team.call-to-arms.text') %>">
              <span><%= link_to t('menu.work-with-us'), 'mailto:chega.ai@guava.com.br' %></span>
            </li>
          </ul>
        </div>
      </div>
    </section>

    <hr>

    <section id="history" class="page-about is-history">
      <span class="divisor has-rounded-top is-righty"></span>
      <div class="grid is-container">
        <figure role="presentation">
          <%= image_tag 'picture-big-g@2x.png', alt: t(:'pictures.guava-hq') %>
        </figure>
        <div class="grid are-columns of-article-content">
          <div class="grid is-row">
            <div class="grid is-column of-sidetext">
              <h2><%= t(:'about-us.history.title') %></h2>
              <p class="is-body"><%= t(:'about-us.history.text-a') %></p>
              <p class="is-body"><%= t(:'about-us.history.text-b') %></p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <hr>

    <section id="giving-back" class="page-about is-giving-back">
      <span class="divisor has-rounded-top is-righty"></span>
      <div class="grid is-container">
        <div class="grid are-columns of-article-content">
          <h2><%= t(:'about-us.giving-back.title') %></h2>
          <span class="helper of-float"></span>
          <blockquote class="is-framed">
            <%= t(:'about-us.giving-back.quote') %>
          </blockquote>
          <p class="is-body"><%= t(:'about-us.giving-back.text') %></p>
        </div>
        <figure>
          <%= image_tag 'picture-tropical-ruby@2x.jpg', class: 'picture of-tropical-rb', alt: t(:'pictures.tropicalrb') %>
          <figcaption><%= t(:'about-us.giving-back.figcaption') %></figcaption>
        </figure>
      </div>
    </section>

    <hr>

    <footer id="footer" class="footer of-article of-page-about">
      <div class="grid is-container">
        <div class="grid are-columns of-article-content">
          <figure role="presentation">
            <%= image_tag 'illustration-about-chat@2x.png', class: 'picture of-chat', alt: t(:'illustrations.chat') %>
          </figure>
          <small><%= t(:'about-us.footnote.text') %></small>
        </div>
      </div>
    </footer>
  </main>
</article>

<%= partial 'cta', locals: { page: 'about-us' } %>
<%= partial 'footer', locals: { page: 'about-us' } %>

<% content_for :masks do %>
  <div class="mask is-section" data-menu-class="on-guava-background" data-menu-mask-of="#cover"></div>
  <div class="mask is-section" data-menu-class="on-white-background" data-menu-mask-of="#team"></div>
  <div class="mask is-section" data-menu-mask-of="#history">
    <div class="mask is-section" data-menu-class="on-white-background" data-menu-mask-of="#history .divisor"></div>
  </div>
  <div class="mask is-section" data-menu-mask-of="#giving-back">
    <div class="mask is-section" data-menu-class="on-white-background" data-menu-mask-of="#giving-back .divisor"></div>
  </div>
  <div class="mask is-section" data-menu-class="on-white-background" data-menu-mask-of="#footer"></div>
<% end %>
